---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
    title: string;
    description?: string;
    activePage?: string;
    ogTitle?: string;
    ogDescription?: string;
    ogUrl?: string;
}

const {
    title,
    description = "Gecko Projects - Professional consulting and project management services.",
    activePage = '',
    ogTitle,
    ogDescription,
    ogUrl = "https://www.gecko-projects.com"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={description}>

    <!-- Open Graph -->
    <meta property="og:title" content={ogTitle || title}>
    <meta property="og:description" content={ogDescription || description}>
    <meta property="og:type" content="website">
    <meta property="og:url" content={ogUrl}>

    <title>{title}</title>

    <!-- Favicon -->
    <link rel="icon" href={`${import.meta.env.BASE_URL}/favicon.svg`} type="image/svg+xml">
    <link rel="icon" href={`${import.meta.env.BASE_URL}/favicon.ico`} sizes="32x32">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Raleway:wght@300;400;500;600&display=swap" rel="stylesheet">

    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}/css/styles.css`}>
</head>
<body>
    <Header activePage={activePage} />

    <main>
        <slot />
    </main>

    <Footer />

    <script is:inline define:vars={{ baseUrl: import.meta.env.BASE_URL }}>
        const script = document.createElement('script');
        script.src = baseUrl + '/js/main.js';
        document.body.appendChild(script);
    </script>
</body>
</html>
