---
interface Props {
    activePage?: string;
}

const { activePage = '' } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<header class="header" id="header">
    <div class="container">
        <a href={`${base}/`} class="logo">Gecko Projects</a>
        <nav class="nav" id="nav">
            <ul class="nav-list">
                <li><a href={`${base}/`} class:list={["nav-link", { active: activePage === 'home' }]}>Home</a></li>
                <li><a href={`${base}/about`} class:list={["nav-link", { active: activePage === 'about' }]}>About</a></li>
                <li><a href={`${base}/services`} class:list={["nav-link", { active: activePage === 'services' }]}>Services</a></li>
                <li><a href={`${base}/experience`} class:list={["nav-link", { active: activePage === 'experience' }]}>Experience</a></li>
                <li><a href={`${base}/contact`} class:list={["nav-link", { active: activePage === 'contact' }]}>Contact</a></li>
                <li><a href="https://www.linkedin.com/in/kathigerth" class="nav-link nav-linkedin" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn Profile"><img src={`${base}/images/LI-In-Bug.png`} alt="LinkedIn"></a></li>
            </ul>
        </nav>
        <button class="nav-toggle" id="nav-toggle" aria-label="Toggle navigation">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
</header>
