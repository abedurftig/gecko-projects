---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
    title="Experience | Gecko Projects"
    description="Experience - Professional background and skills."
    activePage="experience"
    ogUrl="https://www.gecko-projects.com/experience"
>
    <!-- Page Header -->
    <section class="page-header">
        <div class="container">
            <h1>Experience</h1>
        </div>
    </section>

    <!-- Experience Content -->
    <section class="section">
        <div class="container">
            <div class="experience-content-list">
                <ul class="experience-bullets">
                    <li>Successful management and execution of projects at small to medium sized companies of the International Education Industry</li>
                    <li>Improvement of corporate performance by developing, managing and optimising business processes</li>
                    <li>Account management of current and future clients</li>
                    <li>Management and implementation of online and offline marketing campaigns</li>
                    <li>Organisation of industry events/agent workshops online and offline</li>
                    <li>Creation, design and translation of marketing materials</li>
                    <li>Organization of company events, agent workshops (online & offline), conferences, business travels and fam trips</li>
                </ul>
            </div>

            <h2 class="skills-heading">Skills</h2>
            <div class="skills-grid">
                <div class="skill-item">
                    <div class="skill-icon">
                        <img src="/images/focus.png" alt="Customer focus"/>
                    </div>
                    <span class="skill-label">Customer focus</span>
                </div>
                <div class="skill-item">
                    <div class="skill-icon">
                        <img src="/images/group.png" alt="Clear communicator"/>
                    </div>
                    <span class="skill-label">Clear communicator</span>
                </div>
                <div class="skill-item">
                    <div class="skill-icon">
                        <img src="/images/listen.png" alt="Good listener"/>
                    </div>
                    <span class="skill-label">Good listener</span>
                </div>
                <div class="skill-item">
                    <div class="skill-icon">
                        <img src="/images/idea.png" alt="Critical thinker"/>
                    </div>
                    <span class="skill-label">Critical thinker</span>
                </div>
                <div class="skill-item">
                    <div class="skill-icon">
                        <img src="/images/skills.png" alt="Proactive person"/>
                    </div>
                    <span class="skill-label">Proactive person</span>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
