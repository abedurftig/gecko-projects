---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
    title="Contact | Gecko Projects"
    description="Contact Gecko Projects - Get in touch for professional consulting and project management services."
    activePage="contact"
    ogUrl="https://www.gecko-projects.com/contact"
>
    <!-- Page Header -->
    <section class="page-header">
        <div class="container">
            <h1>Contact</h1>
        </div>
    </section>

    <!-- Contact Content -->
    <section class="section">
        <div class="container">
            <div class="contact-content">
                <p>Interested in working together? Get in touch!</p>
                <a href="mailto:hello@gecko-projects.com" class="btn btn-primary btn-large">
                    hello@gecko-projects.com
                </a>
                <div class="contact-location">
                    <p>Europe</p>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
